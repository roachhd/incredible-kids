<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/linear"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    > 
	<RelativeLayout 
		android:id="@+id/preview_relative_layout"
		android:layout_width="fill_parent"
	   	android:layout_height="fill_parent"
	   	>
	   	<ImageView
	   		android:id="@+id/preview_soundbtn"
	   		android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   	/>
	    <ImageView
	    	android:id="@+id/preview_leftbtn"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentLeft="true"
	    	android:layout_centerVertical="true"
	    	android:layout_marginLeft="10dip"
	    	android:src="@drawable/btn_left"
	    	android:clickable="true"
	    />
	    <ImageView
	    	android:id="@+id/preview_center_image"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_centerVertical="true"
	    	android:layout_centerHorizontal = "true"
	    	android:layout_marginTop="10dip"
	    	android:paddingBottom="30dip"
	    />
	    <ImageView
		  	android:id="@+id/preview_word_image"
		   	android:layout_width="wrap_content"
		   	android:layout_height="wrap_content"
		   	android:layout_centerVertical="true"
		   	android:layout_centerHorizontal="true"
		   	android:visibility="gone"
		/>
	    <ImageView
	    	android:id="@+id/preview_rightbtn"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentRight="true"
	    	android:layout_centerVertical="true"
	    	android:layout_marginRight="10dip"
	    	android:src="@drawable/btn_right"
	    	android:clickable="true"
	    />	    
	    <ImageView
	   		android:id="@+id/preview_picviewbtn"
	   		android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:layout_alignParentRight="true"
	   		android:layout_marginRight="5dip"
	   		android:layout_marginTop="5dip"
	   		android:src="@drawable/btn_showpic"
	   		android:clickable="true"
	   	/>
	   <com.incrediblekids.util.PreviewGallery
			android:id="@+id/preview_gallery"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:paddingBottom="10dip"
			android:background="#00ffffff"
		/>
	</RelativeLayout>
</LinearLayout>