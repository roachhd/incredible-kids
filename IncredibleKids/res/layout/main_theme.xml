<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<RelativeLayout 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:id="@+id/main_theme"
		android:background="@drawable/bg_theme"
		android:visibility="visible">
		
		<RelativeLayout 
			android:layout_height="61dp" 
			android:layout_width="180dp"
			android:layout_alignParentTop="true" 
			android:layout_centerHorizontal="true">
		
		<ImageView android:id="@+id/ivGame"
			android:layout_height="61dp" 
			android:layout_width="65dp"
			android:background="@drawable/btn_play_d" 
			
			android:layout_alignParentLeft="true"
			
			android:layout_marginTop="8dp">
		</ImageView>
			
		<ImageView android:id="@+id/ivStudy"
			android:layout_height="61dp" 
			android:layout_width="65dp"
			android:background="@drawable/btn_study" 
			
			android:layout_alignParentRight="true"
			
			android:layout_marginTop="8dp">
		</ImageView>
		</RelativeLayout>
		
		<RelativeLayout 
			android:layout_height="120dp" 
			android:layout_width="140dp" 
			android:layout_alignParentTop="true" 
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="48dp" >
		
				<ImageView android:id="@+id/ivThing"
					android:layout_height="wrap_content" 
					android:layout_width="wrap_content"
					android:background="@drawable/theme_item_thing_n" 
					
					android:layout_alignParentTop="true"
					android:layout_marginTop="5dp"
					android:layout_marginLeft="15dp">
				</ImageView>
				<ImageView android:id="@+id/ivThingScore"
					android:layout_height="35dp" 
					android:layout_width="105dp"
					
					android:layout_alignParentLeft="true"
					android:layout_alignParentBottom="true"
					android:background="@drawable/star_4_0">
				</ImageView>
		</RelativeLayout>
			
		<RelativeLayout 
			android:layout_height="120dp" 
			android:layout_width="140dp" 
			android:layout_alignParentTop="true" 
			android:layout_alignParentRight="true"
			android:layout_marginRight="15dp"
			android:layout_marginTop="48dp" >
			
			<ImageView android:id="@+id/ivAnimal"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true"
				
				android:layout_marginTop="15dp"
				android:layout_marginRight="15dp"
				android:background="@drawable/theme_item_animal_n">
			</ImageView>
			<ImageView android:id="@+id/ivAnimalScore"
				android:layout_height="35dp"
				android:layout_width="105dp"
				
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true"
				android:background="@drawable/star_4_0">
			</ImageView>
				
		</RelativeLayout>
			
			
		<RelativeLayout 
			android:layout_height="120dp" 
			android:layout_width="140dp" 
			android:layout_alignParentBottom="true" 
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="15dp"
			android:layout_marginBottom="15dp" >
			
			<ImageView android:id="@+id/ivColor"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:background="@drawable/theme_item_color_n" 
				
				android:layout_alignParentTop="true" 
				android:layout_marginLeft="15dp"
				android:layout_marginTop="15dp">
			</ImageView>
				
			<ImageView android:id="@+id/ivColorScore"
				android:layout_height="35dp" 
				android:layout_width="55dp"
				
				android:layout_alignParentLeft="true"
				android:layout_alignParentBottom="true"
				android:background="@drawable/star_2_0">
			</ImageView>
				
		</RelativeLayout>
			
			
		<RelativeLayout 
			android:layout_height="120dp" 
			android:layout_width="140dp" 
			android:layout_alignParentBottom="true" 
			android:layout_alignParentRight="true"
			android:layout_marginRight="15dp"
			android:layout_marginBottom="15dp" >
			
			<ImageView android:id="@+id/ivNumber"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:background="@drawable/theme_item_number_n" 
				
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true" 
				android:layout_marginRight="15dp"
				android:layout_marginTop="27dp"></ImageView>
				
			<ImageView android:id="@+id/ivNumberScore"
				android:layout_height="35dp" 
				android:layout_width="55dp"
				
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true"
				
				android:layout_marginRight="3dp"
				android:background="@drawable/star_2_0">
			</ImageView>
		</RelativeLayout>
			
		<RelativeLayout 
			android:layout_height="170dp" 
			android:layout_width="90dp" 
			android:layout_centerInParent="true"
			android:paddingTop="30dp">
			<ImageView android:id="@+id/ivFood"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:background="@drawable/theme_item_food_n" 
				android:layout_alignParentTop="true">
			</ImageView>
			
			<ImageView android:id="@+id/ivFoodScore"
				android:layout_height="35dp" 
				android:layout_width="55dp"
				
				android:layout_alignParentBottom="true"
				android:layout_centerHorizontal="true"
				android:background="@drawable/star_2_0">
			</ImageView>
		</RelativeLayout>
	</RelativeLayout>
	
	<RelativeLayout 
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:id="@+id/intro_theme"
		android:background="@drawable/intro"
		android:visibility="gone">
	</RelativeLayout>
</FrameLayout>
