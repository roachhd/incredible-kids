<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    > 
    <FrameLayout
    	android:id="@+id/preview_framelayout"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    >
		<RelativeLayout 
			android:layout_width="fill_parent"
		   	android:layout_height="fill_parent"
		   	android:background="@drawable/background_1"
		   	>
		    <ImageView
		    	android:id="@+id/preview_leftbtn"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentLeft="true"
		    	android:layout_centerVertical="true"
		    	android:layout_marginLeft="10dip"
		    	android:src="@drawable/btn_left"
		    	android:clickable="true"
		    />
		    <ImageView
		    	android:id="@+id/preview_center_image"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_centerHorizontal = "true"
		    	android:layout_marginTop="20dip"
		    />
		    <ImageView
			  	android:id="@+id/preview_word_image"
			   	android:layout_width="wrap_content"
			   	android:layout_height="wrap_content"
			   	android:layout_centerInParent="true"
			   	android:layout_centerHorizontal="true"
			   	android:visibility="gone"
			/>
		    <ImageView
		    	android:id="@+id/preview_rightbtn"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentRight="true"
		    	android:layout_centerVertical="true"
		    	android:layout_marginRight="10dip"
		    	android:src="@drawable/btn_right"
		    	android:clickable="true"
		    />	    
		   <com.incrediblekids.util.PreviewGallery
				android:id="@+id/preview_gallery"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:paddingBottom="10dip"
				android:background="#00ffffff"
			/>
		</RelativeLayout>
	</FrameLayout>
</LinearLayout>